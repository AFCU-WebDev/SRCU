@model SRCUBagTracking.Models.FileDetailsModel
@{
    ViewBag.Title = "SRCU Marketing";
    var branchMascot = Session["branchMascot"];
    var schoolLocation = Session["schoolLocation"];
    var schoolHours = Session["schoolHours"];
    var BranchId = Session["BranchId"];
    var ImgFolderPath = Session["ImageName"];

    // category name in DropDownList
    List<SelectListItem> fileCategory = new List<SelectListItem>();
    fileCategory.Add(new SelectListItem { Text = "Letters", Value = "Letters" });
    fileCategory.Add(new SelectListItem { Text = "Flyers", Value = "Flyers" });
    //FileCategory.Add(new SelectListItem { Text = "Logo", Value = "Logo" });

}


<div class="container">
    <br />  <h3> Marketing </h3><br /><br />
    <div>
        <ul class="nav nav-tabs responsive" id="pTabs">
            <li class="documentTab active"><a data-toggle="tab" href="#tab1">Style Guide and Branding</a></li>
            <li class="documentTab"><a data-toggle="tab" href="#tab2">Logo</a></li>
            <li class="documentTab"><a data-toggle="tab" href="#tab3">Print Collateral</a></li>
            <li class="documentTab"><a data-toggle="tab" href="#tab4">Web Content</a></li>
            <li class="documentTab"><a data-toggle="tab" href="#tab5">Student On-Boarding</a></li>
            @if (@BranchId.Equals(160100) || @BranchId.Equals(160200))
            {
                <li class="documentTab"><a data-toggle="tab" href="#tab6">Upload</a></li>
            }
        </ul>
        <div class="tab-content responsive">

            @* ****************** Tab 1 - style Guid and branding ************* *@
            <div class="tab-pane fade in active panel" id="tab1">
                <div style="padding-top:0px; " class="panel-body">
                    <div class="marketingTabFrame">
                        @* *********** begin style & Guide content ************ *@
                        <table style="border-top:hidden;" class="table table-responsive ">
                            <tbody>
                                <tr>
                                    <td><img src="~/Content/img/icons/PDFIcon.png" />SRCU Style Guide</td>
                                    <td><a href="~/Content/docs/Marketing/styleGuid/SRCU-StyleGuide.pdf" target="_blank" class="btn btn-info"> View</a> <a href="~/Content/docs/Marketing/styleGuid/SRCU-StyleGuide.pdf" target="_blank" class="btn btn-info" download> Download</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @* ******************* Tab 2 - Logos ******************* *@
            <div class="tab-pane fade panel" id="tab2">
                <div style="padding-top:0px; " class=" panel-body marketingTabFrame">
                    <h4>Note: Please refer to <a href="~/Content/docs/Marketing/styleGuid/SRCU-StyleGuide.pdf" target="_blank">Style Guide</a> before downloading.</h4>
                    <div class="col-md-push-2 col-md-3 logoBox">

                        <strong><i> Apple with FCU</i></strong><br />
                        <a href="~/Content/img/logos/AppleLogoColor.jpg" target="_blank" download> <img class="logoImage" src="~/Content/img/logos/Apple-with-FCU.png" /> </a>
                        <a style="margin-top:20px;" href="~/Content/img/logos/AppleLogoColor.jpg" target="_blank" class="btn btn-info DLbutton" download> Download</a>
                        <p>The standard version of the Apple logo should not be utilized in instances smaller than 1” wide (72 pixels) </p>
                    </div>
                    <div class="col-md-push-3 col-md-3 logoBox">
                        <strong><i>Apple without FCU</i></strong><br />
                        <a href="~/Content/img/logos/AppleLogoNoFCU.jpg" target="_blank" download> <img class="logoImage" src="~/Content/img/logos/Apple-without-FCU.png" /> </a>
                        <a style="margin-top:20px;" href="~/Content/img/logos/AppleLogoNoFCU.jpg" target="_blank" class="btn btn-info DLbutton" download> Download</a>
                        <p>In applications smaller than 1”, use the logo without the Federal Credit Union designation</p>
                    </div>
                </div>
            </div>

            @* ********************* Tab 3 - Print Collateral ******************** *@
            <div class="tab-pane fade panel" id="tab3">
                <div style="padding-top:0px; " class="col-md-12 panel-body marketingTabFrame">
                    @******* Letters*******@
                    <div class="col-md-12">
                        <h4>Letters</h4><hr style="margin:10px;" /><br />
                        @foreach (var item in @ViewBag.LetterCategoryFiles)
                        {
                            <div class="col-md-push-1 col-md-3 flyerBox" style="margin-top:30PX;">
                                <strong>@item.fileTitle</strong><br />
                                @*Add "/SRCUBagTracker" to the document and image path for windows authentication/ AppleNet*@
                                <a href="@string.Format("/Content/docs/Marketing/UploadedFiles/{0}.pdf", @item.fileName)" target="_blank" download=""> <img class="flyerImage" width="180" height="235" src="@string.Format("/Content/img/pics/Marketing/{0}.png", @item.fileName)" /> </a>
                            </div>
                        }
                        <div class="col-md-9"></div>
                    </div>
                    @******* Flyers*******@
                    <div class="col-md-12" style="margin-top:40px;">
                        <h4>Flyers</h4><hr style="margin:10px;" /><br />

                        @foreach (var item in @ViewBag.FlyersCategoryFiles)
                        {
                            <div class="col-md-push-1 col-md-3 flyerBox" style="margin-top:30PX;">
                                <strong>@item.fileTitle</strong><br />
                                @*Add "/SRCUBagTracker" to the document and image path for windows authentication/ AppleNet*@
                                <a href="@string.Format("/Content/docs/Marketing/UploadedFiles/{0}.pdf", @item.fileName)" target="_blank" download=""> <img class="flyerImage" width="180" height="235" src="@string.Format("/Content/img/pics/Marketing/{0}.png", @item.fileName)" /> </a>
                            </div>
                        }

                        @*<div class="col-md-9"></div>*@
                    </div>
                </div>
            </div>

            @* ******************** Tab 4 - Web Content ************* *@
            <div class="tab-pane fade panel" id="tab4">
                <div style="padding-top:0px;" class="panel-body marketingTabFrame">
