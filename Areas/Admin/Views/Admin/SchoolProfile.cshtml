@model SRCUBagTracking.Models.Login

@{
    ViewBag.Title = "SchoolProfile";
}

@Html.Partial("_AdminNavigation")
<div class="container mt-5 ">
    <h2 class="page-header">School Profile</h2>   <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Branch_ID)
        @Html.HiddenFor(model => model.Login_ID)
        @Html.HiddenFor(model => model.permission)
        @Html.HiddenFor(model => model.school_ID)

        <div class="row">
            @*//Username*@
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.username, new { @class = "form-control" })
                        @Html.HiddenFor(model => model.username)
                    </div>
                </div>
            </div>

            @*//Password*@
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => Model.password, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.password)
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5 ml-1 justify-content-start">
            <input type="submit" value="Update" class="btn CTA_btn" id="loginUpdate" />
            @*<div class="col-md-1 ">
                <a href="@Url.Action("SchoolBag", "Admin", new { @ViewBag.SchoolId })" id="cancelChanges" class="btn btn-danger" role="button">Cancel</a>
                </div>*@
        </div>
    }
</div>



<script>
    $(document).ready(function () {
        $("#username").attr("disabled", true);
        $("#password").attr("type", "text");

        $("#loginUpdate").click(function () {
            $("#password").attr("type", "password");
        })
    });
</script>