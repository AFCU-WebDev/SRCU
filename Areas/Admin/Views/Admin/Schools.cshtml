        <div class="col-3">
            <a href="@Url.Content("~/Admin/Admin/AddSchool")" type="button" class="btn CTA_btn">Add New School</a>
        </div>
        <div class="col-3" >
            <a href="@Url.Content("~/Admin/Admin/SchoolsDetail")" type="button" class="btn CTA_btn">Update Schools</a>
        </div>

    </div>*@
</div>
