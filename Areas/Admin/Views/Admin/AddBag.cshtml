@model SRCUBagTracking.Models.Bag

@{
    ViewBag.Title = "Add a New Bag";
}
@Html.Partial("_AdminNavigation")

<div class="container mt-5">

    <h2 class="page-header">Add New Bag</h2>   <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            @*<h5 class="pull-right no-border"> @Html.HiddenFor(m => m.dateSubmitted, "{0:MM-dd-yyyy HH:mm tt}")</h5>*@
            <div class="col-md-6">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.school_ID, new { @Value = ViewBag.SchoolId })

                <div class="form-group">
                    @Html.LabelFor(model => model.bagNumber, htmlAttributes: new { @class = "control-label " })
                    <div class="">
                        @Html.EditorFor(model => model.bagNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.bagNumber, "", new { @class = "text-danger small bold" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.deposits, htmlAttributes: new { @class = "control-label " })
