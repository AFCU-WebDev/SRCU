                <div class="form-group">
                    @Html.LabelFor(model => model.dateSubmitted, htmlAttributes: new { @class = "control-label " })
                    <div class="">
                        @Html.EditorFor(model => model.dateSubmitted, "{0:MM-dd-yyyy HH:mm tt}", new { htmlAttributes = new { @class = "form-control datepicker" } })
                        @Html.ValidationMessageFor(model => model.dateSubmitted, "", new { @class = "text-danger small bold" })
                    </div>
                </div>

                <div class="form-group">
