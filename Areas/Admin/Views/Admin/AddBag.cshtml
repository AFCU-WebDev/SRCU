                        @Html.EditorFor(model => model.completedByTeller, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.completedByTeller, "", new { @class = "text-danger small bold" })
                    </div>
                </div>
