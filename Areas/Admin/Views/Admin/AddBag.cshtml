                        @Html.ValidationMessageFor(model => model.handDeliver, "", new { @class = "text-danger small bold" })
                    </div>
                </div>

            </div>
            <!--end column 6-->
        </div>
 
            <div class="row mt-5 mr-4 justify-content-end">
                <input type="submit" value="Add Bag" class="btn CTA_btn" />
            </div>

