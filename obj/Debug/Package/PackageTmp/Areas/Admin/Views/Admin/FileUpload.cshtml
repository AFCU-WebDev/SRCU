@model SRCUBagTracking.Models.EmpModel

@{
    ViewBag.Title = "File Upload";

    // category name in DropDownList
    List<SelectListItem> FileCategory = new List<SelectListItem>();
    FileCategory.Add(new SelectListItem { Text = "Letters", Value = "Letters" });
    FileCategory.Add(new SelectListItem { Text = "Flyers", Value = "Flyers" });
    //FileCategory.Add(new SelectListItem { Text = "Logo", Value = "Logo" });

}
@Html.Partial("_AdminNavigation")
<h2 class="col-md-offset-1">File Upload</h2>

@using (Html.BeginForm("FileUpload", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @* ***** Select File ***** *@
        <div class="form-group">
            @Html.LabelFor(model => model.files, htmlAttributes: new { @class = "control-label col-md-push-1 col-md-2" , style="text-align:left;"})
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.files, "", new { @type = "file", @multiple = "multiple" })
                @Html.ValidationMessageFor(model => model.files, "", new { @class = "text-danger" })
            </div>
        </div>
        @* ***** Banner Starts ***** *@
        @*<div class="form-group">
            @Html.LabelFor(model => model.bannerStart, htmlAttributes: new { @class = "control-label col-md-2 " })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.bannerStart, new { @class = "control-label col-md-2 datepicker" })
                @Html.ValidationMessageFor(model => model.bannerStart, "", new { @class = "text-danger" })
            </div>
        </div>*@
        @* ***** Banner Ends ***** *@
        @*<div class="form-group">
            @Html.LabelFor(model => model.bannerEnd, htmlAttributes: new { @class = "control-label col-md-2 " })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.bannerEnd, new { @class = "control-label col-md-2 datepicker" })
                @Html.ValidationMessageFor(model => model.bannerEnd, "", new { @class = "text-danger" })
            </div>
        </div>*@

        @* ***** File Title ***** *@
        <div class="form-group">
            @Html.LabelFor(model => model.fileTitle, htmlAttributes: new { @class = "control-label col-md-push-1 col-md-2" , style="text-align:left;" })
            <div class="col-md-10" style="text-align:left;">
                @Html.TextBoxFor(model => model.fileTitle, htmlAttributes: new { @class = "control-label col-md-2", style="text-align:left;"})
                @Html.ValidationMessageFor(model => model.fileTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        @* ***** File Category ***** *@
        <div class="form-group">
            @Html.Label("File Category", htmlAttributes: new { @class = "control-label col-md-push-1 col-md-2" , style="text-align:left;" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.fileCategory, FileCategory, new { @class = "form-control list-box tri-state" })
                @Html.ValidationMessageFor(model => model.fileCategory, "", new { @class = "text-danger small bold" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-success">
                @ViewBag.FileStatus
                @* @ViewBag.Message*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                @Html.Action("FileDetails", "Admin")
            </div>
        </div>
    </div>
}


