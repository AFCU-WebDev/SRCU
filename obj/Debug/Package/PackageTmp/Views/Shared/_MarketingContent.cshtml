@model SRCUBagTracking.Models.FileDetailsModel
@{
    ViewBag.Title = "SRCU Marketing";
    var branchMascot = Session["branchMascot"];
    var schoolLocation = Session["schoolLocation"];
    var schoolHours = Session["schoolHours"];
    var BranchId = Session["BranchId"];
    var ImgFolderPath = Session["ImageName"];

    // category name in DropDownList
    List<SelectListItem> fileCategory = new List<SelectListItem>();
    fileCategory.Add(new SelectListItem { Text = "Letters", Value = "Letters" });
    fileCategory.Add(new SelectListItem { Text = "Flyers", Value = "Flyers" });
    //FileCategory.Add(new SelectListItem { Text = "Logo", Value = "Logo" });

}


<div class="container mt-5">
        <div class="col-md-12">
            <h2>Marketing</h2>
            <hr />
        </div>

        <div class="p-4 bg-white rounded shadow m-3">
            <ul class="nav nav-tabs nav-pills with-arrow lined flex-column flex-sm-row text-center" id="pTabs">
                <li class="nav-item flex-sm-fill"><a data-toggle="tab" class="nav-link text-uppercase font-weight-bold linkColor rounded-0 active" href="#tab1">Style Guide and Branding</a></li>
                <li class="nav-item flex-sm-fill"><a data-toggle="tab" class="nav-link text-uppercase font-weight-bold linkColor rounded-0" href="#tab2">Logo</a></li>
                <li class="nav-item flex-sm-fill"><a data-toggle="tab" class="nav-link text-uppercase font-weight-bold linkColor rounded-0" href="#tab3">Print Collateral</a></li>
                <li class="nav-item flex-sm-fill"><a data-toggle="tab" class="nav-link text-uppercase font-weight-bold linkColor rounded-0" href="#tab4">Web Content</a></li>
                <li class="nav-item flex-sm-fill"><a data-toggle="tab" class="nav-link text-uppercase font-weight-bold linkColor rounded-0" href="#tab5">Student On-Boarding</a></li>
                @if (@BranchId.Equals(160100) || @BranchId.Equals(160200))
                {
                    <li class="nav-item flex-sm-fill"><a data-toggle="tab" class="nav-link text-uppercase linkColor font-weight-bold mr-sm-1 rounded-0" href="#tab6">Upload</a></li>
                }
            </ul>

            <div class="tab-content responsive">
                @* ****************** Tab 1 - style Guid and branding ************* *@
                <div class="tab-pane fade show active " id="tab1">
                        <div class="m-5">
                            @* *********** begin style & Guide content ************ *@
                            <table class="table table-responsive ">
                                <tbody>
                                    <tr>
                                        <td class="border-0"><img src="/SRCU/Content/img/icons/PDFIcon.png" />SRCU Style Guide</td>
                                        <td class="border-0"><a href="~/Content/docs/Marketing/styleGuid/SRCU-StyleGuide.pdf" target="_blank" class="btn btn-info"> View</a> <a href="~/Content/docs/Marketing/styleGuid/SRCU-StyleGuide.pdf" target="_blank" class="btn btn-info" download> Download</a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                </div>

                @* ******************* Tab 2 - Logos ******************* *@
                <div class="tab-pane fade" id="tab2">
                    <div class="m-5">
                        <h4>Note: Please refer to <a href="~/Content/docs/Marketing/styleGuid/SRCU-StyleGuide.pdf" target="_blank">Style Guide</a> before downloading.</h4>

                        <div class="row">

                            @* **** Apple Logo with FCU **** *@
                            <div class="col-6 mt-5 rounded">
                                <div class="card" style="width: 18rem;">
                                    <a href="~/Content/img/logos/AppleLogoColor.jpg" target="_blank" download><img class="w-100 p-3 border-bottom" src="~/Content/img/logos/Apple-with-FCU.png" /> </a>
                                    <div class="card-body">
                                        <h5 class="card-title">Apple logo with FCU</h5>
                                        <p class="card-text">The standard version of the Apple logo should not be utilized in instances smaller than 1” wide (72 pixels)</p>
                                        <a href="~/Content/img/logos/AppleLogoColor.jpg" target="_blank" class="btn btn-info DLbutton" download> Download</a>
                                    </div>
                                </div>
                            </div>

                            @* **** Apple Logo without FCU **** *@
                            <div class="col-6 mt-5 rounded">
                                <div class="card" style="width: 18rem;">
                                    <a href="~/Content/img/logos/AppleLogoNoFCU.jpg" target="_blank" download> <img class="w-100 p-4 border-bottom" src="~/Content/img/logos/Apple-without-FCU.png" /> </a>
                                    <div class="card-body">
                                        <h5 class="card-title">Apple logo without FCU</h5>
                                        <p class="card-text">In applications smaller than 1”, use the logo without the Federal Credit Union designation</p>
                                        <a href="~/Content/img/logos/AppleLogoNoFCU.jpg" target="_blank" class="btn btn-info DLbutton" download> Download</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                @* ********************* Tab 3 - Print Collateral ******************** *@
                <div class="tab-pane fade" id="tab3">
                    <div class="col-md-12 m-5">
                        @******* Letters*******@
                        <div class="row">
                            <div class="col-12">
                                <h4>Letters</h4>
                                <hr />
                            </div>
                            @foreach (var item in @ViewBag.LetterCategoryFiles)
                            {
                                <div class="flyerBox mt-5">
                                    <strong>@item.fileTitle</strong><br />
                                    @*Add "/SRCUBagTracker" to the document and image path for windows authentication/ AppleNet*@
                                    <a href="@string.Format("/Content/docs/Marketing/UploadedFiles/{0}.pdf", @item.fileName)" target="_blank" download=""> <img class="flyerImage" width="180" height="235" src="@string.Format("/SRCU/Content/img/pics/Marketing/{0}.png", @item.fileName)" /> </a>
                                </div>
                            }

                        </div>

                        @******* Flyers*******@
                        <div class="row">
                            <div class="col-12">
                                <h4 class="mb-3 mt-5">Flyers</h4>
                                <hr />
                            </div>
                            @foreach (var item in @ViewBag.FlyersCategoryFiles)
                            {
                                <div class="flyerBox mt-5 col-3">
                                    <strong>@item.fileTitle</strong><br />
                                    @*Add "/SRCUBagTracker" to the document and image path for windows authentication/ AppleNet*@
                                    <a href="@string.Format("/Content/docs/Marketing/UploadedFiles/{0}.pdf", @item.fileName)" target="_blank" download=""> <img class="flyerImage" width="180" height="235" src="@string.Format("/SRCU/Content/img/pics/Marketing/{0}.png", @item.fileName)" /> </a>
                                </div>
                            }

                            @*<div class="col-md-9"></div>*@
                        </div>
                    </div>
                </div>

                @* ******************** Tab 4 - Web Content ************* *@
